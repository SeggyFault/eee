<div class="bg-eee-neutral-800">
  <div class="container flex flex-col py-10 lg:flex-row lg:gap-80 text-eee-neutral-100">
    <h2 class="pb-8 text-xl md:basis-1/4">{{ heading }}</h2>
    <div class="flex flex-col gap-10 md:basis-3/4">
      {% for item in items %}
        <div class="flex flex-col gap-4">
          <div class="flex items-center gap-4">
            {% include "image/template.twig" with {
              image: item.image,
              width: 100,
              allowed_sizes: ["sm"]
            } %}
            <h3 class="text-6xl">{{ item.shareholder_name }}</h3>
          </div>
          <div class="flex flex-col gap-4">{{ item.text }}</div>
        </div>
      {% endfor %}
    </div>
  </div> 
</div>
