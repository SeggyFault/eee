{% extends "section.twig" %}

{% block section_content %}
  <div>
  {# Contacts #}
    <div class="flex flex-col gap-4 pb-10 mb-10 border-b lg:flex-row border-eee-blue-green-rules-100">
      <div class="w-full lg:w-1/3">
        <h1 class="text-6xl">{{ heading }}<span class="text-eee-lime-100">_</span></h1>
        <div class="pt-7">
          <div class="flex flex-col gap-1">
            <p class="pb-0 font-bold">{{ function('pll__', "Адреса") }}</p>
            <p>{{ contacts.address }}</p>
          </div>
          <div class="flex flex-col gap-1">
            <p class="pb-0 font-bold">{{ function('pll__', "Телефон") }}</p>
            <p>{{ contacts.phone }}</p>
          </div>
          <div class="flex flex-col gap-1">
            <p class="pb-0 font-bold">{{ function('pll__', "Пошта") }}</p>
            <p>{{ contacts.email }}</p>
          </div>
          {# Social media #}
          <ul class="flex gap-2 p-0 list-none">
            {% if social_media.facebook %}
              <li>
                <a href="{{ social_media.facebook }}" target="_blank">
                  <span class="fill-eee-lime-100">
                    {% include 'icons/facebook.twig' %}
                  </span>
                </a>
              </li>
            {% endif %}
            {% if social_media.linkedin %}
              <li>
                <a href="{{ social_media.linkedin }}" target="_blank">
                  <span class="fill-eee-lime-100">{% include 'icons/linkedin.twig' %}</span>
                </a>
              </li>
            {% endif %}
          </ul>
        </div>
      </div>
      {# Map #}
      <div class="w-full lg:w-2/3 h-[500px]">
        <iframe
          class="w-full"
          height="500"
          style="border:0"
          loading="lazy"
          allowfullscreen
          referrerpolicy="no-referrer-when-downgrade"
          src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCoVFuEov11Ne4aUBw-RLA0BKxk1Inr7QM
            &q=Antonovycha%20St%2C%2029%2C%20Kyiv%2C%20Ucrania%2C%2002000
">
</iframe>

      </div>
    </div>
  {# Form #}
    <div class="flex flex-col gap-4 lg:flex-row">
     <div class="flex flex-col w-full gap-2 lg:w-1/2">
      <h3 class="text-3xl">{{ function('pll__', "Відправте нам повідомлення") }}</h3>
      <p>{{ function('pll__', "*Обов'язкові поля") }}</p>
     </div>
      <div class="w-full lg:w-1/2">
        {% apply shortcodes %}
          {% if (function('pll_current_language')) == 'en' %}
            [contact-form-7 id="425dab6"]
          {% else %}
            [contact-form-7 id="91e77ba"]
          {% endif %}
        {% endapply %}
      </div>
    </div>
  </div>
{% endblock %}
