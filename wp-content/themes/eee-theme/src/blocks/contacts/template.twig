{% extends "section.twig" %}

{% block section_content %}
  <div>
  {# Contacts #}
    <div class="flex gap-4 border-b border-eee-blue-green-rules-100 pb-10 mb-10">
      <div class="w-1/3">
        <h1 class="text-6xl">{{ heading }}<span class="text-eee-lime-100">_</span></h1>
        <div class="pt-7">
          <div class="flex flex-col gap-1">
            <p class="font-bold pb-0">{{__("Адреса", "eee-theme")}}</p>
            <p>{{ contacts.address }}</p>
          </div>
          <div class="flex flex-col gap-1">
            <p class="font-bold pb-0">{{__("Телефон", "eee-theme")}}</p>
            <p>{{ contacts.phone }}</p>
          </div>
          <div class="flex flex-col gap-1">
            <p class="font-bold pb-0">{{__("Пошта", "eee-theme")}}</p>
            <p>{{ contacts.email }}</p>
          </div>
          {# Social media #}
          <ul class="flex gap-2 list-none p-0">
            {% if social_media.facebook %}
              <li>
                <a href="{{ social_media.facebook }}" target="_blank">
                  <span class="fill-eee-lime-100">
                    {% include 'icons/facebook.twig' %}
                  </span>
                </a>
              </li>
            {% endif %}
            {% if social_media.linkedin %}
              <li>
                <a href="{{ social_media.linkedin }}" target="_blank">
                  <span class="fill-eee-lime-100">{% include 'icons/linkedin.twig' %}</span>
                </a>
              </li>
            {% endif %}
          </ul>
        </div>
      </div>
      {# Map #}
      <div class="bg-orange-400 w-2/3 h-[500px]"></div>
    </div>
  {# Form #}
    <div class="flex gap-4">
     <div class="flex flex-col gap-2 w-1/2">
      <h3 class="text-3xl">Відправте нам повідомлення</h3>
      <p>*Обовязкові поля</p>
     </div>
      <div class="w-1/2">
        {% apply shortcodes %}
          [contact-form-7 id="91e77ba"]
        {% endapply %}
      </div>
    </div>
  </div>
{% endblock %}
