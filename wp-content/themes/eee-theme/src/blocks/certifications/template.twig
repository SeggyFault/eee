<section class="border-t border-eee-blue-green-rules-100">
  <div class="container flex gap-6">
    <div class="md:basis-1/4 pt-10 pb-40">
      <h2 class="text-xl">{{ heading }}</h2>
    </div>

    <div class="md:basis-3/4 grid grid-cols-3 gap-12">
        {% for item in items %}
          <div class="border-l border-eee-blue-green-rules-100">
            <div class="flex flex-col gap-4 py-10">
              <h3>{{ item.subheading }}</h3>
              <p>{{ item.text }}</p>
            </div>
          </div>
        {% endfor %}
    </div>
  </div>
</section>
