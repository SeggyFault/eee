<section class="border-t border-eee-blue-green-rules-100">
  <div class="container flex flex-col lg:flex-row lg:gap-6">
    <div class="pt-10 pb-8 lg:pb-40 md:basis-1/4">
      <h2 class="text-xl">{{ heading }}</h2>
    </div>

    <div class="grid lg:gap-12 lg:grid-cols-3 md:basis-3/4">
        {% for item in items %}
          <div class="border-l border-eee-blue-green-rules-100">
            <div class="flex flex-col gap-2 py-2 lg:py-10">
              <h3>{{ item.subheading }}</h3>
              {{ item.text }}
            </div>
          </div>
        {% endfor %}
    </div>
  </div>
</section>
