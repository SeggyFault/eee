{% extends "section.twig" %}

{% block section_content %}
<div class="flex flex-col gap-8 items-center md:flex-row">
  <div class="basis-1/2">
    {% include "image/template.twig" with {
      image: image,
      width: 680,
      allowed_sizes: ['md', 'lg']
    } %}
  </div>
  <div class="flex basis-1/2 flex-col gap-6">
    <p class="text-lg">{{ text }}</p>
    <h2 class="text-6xl">{{ heading }}</h2>
    <p class="text-lg">{{ subtext }}</p>
  </div>
</div>

{% endblock %}
