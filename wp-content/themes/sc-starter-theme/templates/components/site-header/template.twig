{% set nav_items = nav_items ? nav_items : site_header_primary.get_items %}

<header id="site-header" class="py-8 border-b border-eee-neutral-100 fixed min-w-full">
  <div class="container flex items-center justify-between ">
    <a href="{{ homepage_url }}">
      <img class="logo-white" src="{{ logo_white }}" width="89" />
      <img class="logo-black hidden" src="{{ logo_black }}" width="89" />
    </a>
    <nav>
      <ul class="flex gap-12">
        {% for item in nav_items %}
          <li class="font-bold text-sm">
            <a class="text-eee-neutral-100" href="{{ item.url }}">{{ item.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>
