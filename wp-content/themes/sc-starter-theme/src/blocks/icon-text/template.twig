{% extends "section.twig" %}

{% block section_content %}
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-20 gap-y-6">
  {% for item in items %}
    <div class="flex items-center gap-4">
      <div class="flex justify-center items-center h-16 w-16 min-w-16 bg-eee-lime-100 rounded-full">
        {% include "image/template.twig" with {
          image: item.icon,
          width: 24,
          allowed_sizes: ["xs"]
        } %}
      </div>
      <p>{{ item.text }}</p>
    </div>
    {% endfor %}
</div>

{% endblock %}
