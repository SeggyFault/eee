<section class="py-10 md:py-20 {{ background_color ? 'bg-default-eee-neutral-800 text-eee-neutral-100' : 'bg-eee-neutral-100' }}">
    <div class="container">
      <h2>{{ heading }}</h2>
      <div class="flex gap-8 py-10">
        <div class="{{ image_position ? 'order-last' : 'order-first' }}">
          {% include "image/template.twig" with {
            image: image,
            width: 680,
            allowed_sizes: ['md', 'lg']
          } %}
        </div>
        <div class="max-w-prose">{{ text }}</div>
      </div>    
    </div>
</section>